% 使用了tabular*，四个参数，可以用于不少地方
\newcommand{\resumeTable}[4]{
    \vspace{-5pt}
    \begin{tabular*}{\textwidth}[t]{l@{\extracolsep{\fill}}r}
      \textbf{#1} & {\color{darkgray} #2} \\
      \textit{#3} & {\color{darkgray} #4}
    \end{tabular*}
    \vspace{-2pt}
}


